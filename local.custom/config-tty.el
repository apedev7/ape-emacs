;
; For tty session, set to use ANSI colors
(custom-set-faces
 '(paren-face-match ((t (:foreground "black" :background "cyan"))))
 '(paren-face-mismatch ((t (:foreground "black" :background "red"))))
 '(font-lock-string-face ((t (:foreground "green" :bold t))))
 '(font-lock-reference-face ((t (:foreground "red"))))
 '(font-lock-doc-string-face ((t (:foreground "cyan"))))
 '(font-lock-preprocessor-face ((t (:foreground "cyan" :bold t))))
 '(font-lock-variable-name-face ((t (:foreground "magenta"))))
 '(font-lock-warning-face ((t (:foreground "red" :bold t))))
 '(font-lock-keyword-face ((t (:foreground "red" :bold t))))
 '(font-lock-type-face ((t (:foreground "blue" :bold t))))
 '(font-lock-comment-face ((t (:foreground "green"))))
 '(font-lock-function-name-face ((t (:foreground "red"))))
 '(makefile-space-face ((t (:foreground "black" :background "magenta"))))
 '(custom-rogue-face ((t (:foreground "#ffffff" :background "black"))))
 '(default ((t (:background "#ffffff"))) t)
)
